<?xml version="1.0" encoding="UTF-8"?>
<specification xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xmlns="https://magento.com/open-specification"
               xsi:schemaLocation="https://magento.com/open-specification ../specification.xsd">

    <module name="magento.sales">

        <struct name="order">
            <summary>Order represent the purchase of the customer</summary>
            <extensible>true</extensible>
            <properties>
                <property name="id">
                    <summary>The identifier of the order</summary>
                    <type>string</type>
                    <required>true</required>
                </property>
                <property name="original_order_id">
                    <summary>The identifier of the original order to which it refers to</summary>
                    <type>string</type>
                    <required>false</required>
                </property>
                <property name="store">
                    <summary>Store from where the order comes from</summary>
                    <type>string</type>
                    <required>true</required>
                </property>
                <property name="status">
                    <summary>Status of the order</summary>
                    <type>string</type>
                    <required>false</required>
                </property>
                <property name="status_reason">
                    <summary>Status reason of the order</summary>
                    <type>string</type>
                    <required>false</required>
                </property>
                <property name="status_date">
                    <summary>When the status changed for the order</summary>
                    <type>datetime</type>
                    <required>false</required>
                </property>
                <property name="ip">
                    <summary>IP of the customer that placed the order</summary>
                    <type>string</type>
                    <required>true</required>
                </property>
                <property name="language">
                    <summary>Language of the order</summary>
                    <type>string</type>
                    <required>false</required>
                </property>
                <property name="vat_country">
                    <summary>Country in which the order is paying taxes</summary>
                    <type>string</type>
                    <required>true</required>
                </property>
                <property name="origin">
                    <summary>Channel in which the order was placed</summary>
                    <type>string</type>
                    <required>true</required>
                </property>
                <property name="origin_date">
                    <summary>Date in which the order was placed</summary>
                    <type>datetime</type>
                    <required>true</required>
                </property>
                <property name="customer_service_agent">
                    <summary>Identifier of the agent that placed the order (if any)</summary>
                    <type>string</type>
                    <required>false</required>
                </property>
                <property name="customer">
                    <summary>Customer that placed the order</summary>
                    <type>magento.sales.order_customer</type>
                    <required>true</required>
                </property>
                <property name="addresses">
                    <summary>Addresses of the order</summary>
                    <type>array[magento.common.address]</type>
                    <required>true</required>
                </property>
                <property name="payments">
                    <summary>Payments of the order</summary>
                    <type>array[magento.sales.order_payment]</type>
                    <required>false</required>
                </property>
                <property name="lines">
                    <summary>Lines of the order</summary>
                    <type>array[magento.sales.order_line]</type>
                    <required>false</required>
                </property>
                <property name="gift_message">
                    <summary>Gift message</summary>
                    <type>string</type>
                    <required>false</required>
                </property>
                <property name="custom_attributes">
                    <summary>Custom Attributes</summary>
                    <type>array[magento.common.custom_attribute]</type>
                    <required>false</required>
                </property>
            </properties>
        </struct>

        <struct name="order_comment">
            <summary>Order Comment</summary>
            <extensible>false</extensible>
            <properties>
                <property name="order_id">
                    <summary>Order id</summary>
                    <type>string</type>
                    <required>true</required>
                </property>
                <property name="sales_channel_id">
                    <summary>Sales channel identifier</summary>
                    <type>string</type>
                    <required>true</required>
                </property>
                <property name="created_date">
                    <summary>Date of the comment</summary>
                    <type>datetime</type>
                    <required>true</required>
                </property>
                <property name="user">
                    <summary>User</summary>
                    <type>string</type>
                    <required>true</required>
                </property>
                <property name="comment">
                    <summary>Comment content</summary>
                    <type>string</type>
                    <required>true</required>
                </property>
            </properties>
        </struct>

        <struct name="order_collection">
            <summary>Order Collection</summary>
            <extensible>false</extensible>
            <properties>
                <property name="offset">
                    <summary>Search result offset</summary>
                    <type>integer</type>
                    <required>false</required>
                </property>
                <property name="size">
                    <summary>Max number of entries</summary>
                    <type>integer</type>
                    <required>false</required>
                </property>
                <property name="total">
                    <summary>Total number of records matching search query</summary>
                    <type>integer</type>
                    <required>false</required>
                </property>
                <property name="items">
                    <summary>Matching orders</summary>
                    <type>array[magento.sales.order]</type>
                    <required>false</required>
                </property>
            </properties>
        </struct>

        <struct name="order_customer">
            <summary>Customer that placed the order</summary>
            <extensible>true</extensible>
            <properties>
                <property name="id">
                    <summary>Identifier of the customer</summary>
                    <type>string</type>
                    <required>true</required>
                </property>
                <property name="type">
                    <summary>Type of customer</summary>
                    <type>string</type>
                    <required>false</required>
                </property>
                <property name="segment">
                    <summary>Segment of customer</summary>
                    <type>string</type>
                    <required>false</required>
                </property>
            </properties>
        </struct>

        <struct name="order_payment">
            <summary>Information of the payment of the order</summary>
            <extensible>true</extensible>
            <properties>
                <property name="reference">
                    <summary>Reference of the payment</summary>
                    <type>string</type>
                    <required>true</required>
                </property>
                <property name="currency">
                    <summary>Currency of the payment</summary>
                    <type>string</type>
                    <required>true</required>
                </property>
                <property name="transactions">
                    <summary>Transactions of the payment - only one transaction per order</summary>
                    <description>Only one transaction per order is currently supported by Magento Order Management. If more than 1 transaction is sent, the order may be rejected and payments won't be processed as expected.</description>
                    <type>array[magento.sales.order_payment_transaction]</type>
                    <required>false</required>
                </property>
            </properties>
        </struct>

        <struct name="order_payment_transaction">
            <summary>Transaction of the payment</summary>
            <extensible>true</extensible>
            <properties>
                <property name="payment_method">
                    <summary>Payment method of the transaction</summary>
                    <type>string</type>
                    <required>true</required>
                </property>
                <property name="payment_submethod">
                    <summary>Payment submethod of the transaction</summary>
                    <type>string</type>
                    <required>false</required>
                </property>
                <property name="amount">
                    <summary>Amount of the transaction</summary>
                    <type>float</type>
                    <required>true</required>
                </property>
                <property name="gateway_information">
                    <summary>Gateway information about the transaction</summary>
                    <type>magento.sales.order_payment_transaction_gateway</type>
                    <required>true</required>
                </property>
                <property name="billing_address_reference">
                    <summary>Reference of the address of the transaction</summary>
                    <type>string</type>
                    <required>true</required>
                </property>
            </properties>
        </struct>

        <struct name="order_payment_transaction_gateway">
            <summary>Gateway information of the transaction</summary>
            <extensible>true</extensible>
            <properties>
                <property name="gateway_id">
                    <summary>Identifier of the gateway</summary>
                    <type>string</type>
                    <required>true</required>
                </property>
                <property name="account">
                    <summary>Account used in the gateway</summary>
                    <type>string</type>
                    <required>true</required>
                </property>
                <property name="transaction_id">
                    <summary>Identifier of the transaction inside the gateway</summary>
                    <type>string</type>
                    <required>true</required>
                </property>
                <property name="authorization_status">
                    <summary>Status of the payment authorization for this transaction</summary>
                    <type>string</type>
                    <required>false</required>
                </property>
                <property name="original_auth_request_id">
                    <summary>Original Request Identifier of the payment in the gateway</summary>
                    <type>string</type>
                    <required>false</required>
                </property>
                <property name="payment_account_unique_id">
                    <summary>Payment Account Unique Id of the transaction</summary>
                    <type>string</type>
                    <required>false</required>
                </property>
                <property name="custom_attributes">
                    <summary>Additional gateway information</summary>
                    <type>array[magento.common.custom_attribute]</type>
                    <required>false</required>
                </property>

            </properties>
        </struct>

        <struct name="order_line">
            <summary>Line of an order</summary>
            <extensible>true</extensible>
            <properties>
                <property name="id">
                    <summary>Identifier of the line</summary>
                    <type>string</type>
                    <required>true</required>
                </property>
                <property name="line_number">
                    <summary>Number of the line in sequential order</summary>
                    <type>integer</type>
                    <required>true</required>
                </property>
                <property name="original_line_number">
                    <summary>Number of the original line to which it refers to</summary>
                    <type>integer</type>
                    <required>false</required>
                </property>
                <property name="product_type">
                    <summary>Type of the product</summary>
                    <type>string</type>
                    <required>true</required>
                </property>
                <property name="sku">
                    <summary>SKU identifier of the item</summary>
                    <type>string</type>
                    <required>true</required>
                </property>
                <property name="quantity">
                    <summary>Quantity of similar lines of the order</summary>
                    <type>integer</type>
                    <required>false</required>
                </property>
                <property name="product_name">
                    <summary>Name of the product</summary>
                    <type>string</type>
                    <required>false</required>
                </property>
                <property name="parent_line_id">
                    <summary>Link to the parent line for bundles and services</summary>
                    <type>string</type>
                    <required>false</required>
                </property>
                <property name="parent_line_number">
                    <summary>Parent line number</summary>
                    <type>integer</type>
                    <required>false</required>
                </property>
                <property name="shipping_line_number">
                    <summary>Link to shipping line item</summary>
                    <description>Points to shipping item line number only for shippable items</description>
                    <type>integer</type>
                    <required>false</required>
                </property>
                <property name="image_url">
                    <summary>URL of the image associated to the product</summary>
                    <type>string</type>
                    <required>false</required>
                </property>
                <property name="product_url">
                    <summary>URL of the product</summary>
                    <type>string</type>
                    <required>false</required>
                </property>
                <property name="source_id">
                    <summary>[*deprecated*]</summary>
                    <type>string</type>
                    <required>false</required>
                </property>
                <property name="shipping_address_reference">
                    <summary>Reference of the address where the product will be sent</summary>
                    <type>string</type>
                    <required>true</required>
                </property>
                <property name="payment_reference">
                    <summary>Identifier of the associated payment for the item</summary>
                    <type>string</type>
                    <required>true</required>
                </property>
                <property name="pre_order_street_date">
                    <summary>Expected date an item will be available</summary>
                    <type>datetime</type>
                    <required>false</required>
                </property>
                <property name="amount">
                    <summary>Pricing information of the line</summary>
                    <type>magento.common.price</type>
                    <required>true</required>
                </property>
                <property name="payments">
                    <summary>Payment information of the line</summary>
                    <type>array[magento.sales.order_line_payment]</type>
                    <required>false</required>
                </property>
                <property name="status">
                    <summary>Status of the line</summary>
                    <type>string</type>
                    <required>false</required>
                </property>
                <property name="status_reason">
                    <summary>Status reason of the line</summary>
                    <type>string</type>
                    <required>false</required>
                </property>
                <property name="status_date">
                    <summary>When the status changed for the order line</summary>
                    <type>datetime</type>
                    <required>false</required>
                </property>
                <property name="promise_delivery_date">
                    <summary>The promised date to deliver item</summary>
                    <type>datetime</type>
                    <required>false</required>
                </property>
                <property name="mandatory_price_review">
                    <summary>Define if price review is mandatory or not</summary>
                    <type>boolean</type>
                    <required>false</required>
                </property>
                <property name="promotions_info">
                    <summary>Information about promotions</summary>
                    <type>magento.sales.order_line_promotion_information</type>
                    <required>false</required>
                </property>
                <property name="custom_attributes">
                    <summary>Custom Attributes</summary>
                    <type>array[magento.common.custom_attribute]</type>
                    <required>false</required>
                </property>
                <property name="source_location">
                    <summary>Identifier that will force the source to be used when sourcing the order</summary>
                    <description>Note: if no stock is available in this defined source, the order line will remain in backorder. If an order is a ISPU, this field will be used only when Ship To Store is enabled to force the source that will be providing the stock to the final collection point</description>
                    <type>string</type>
                    <required>false</required>
                </property>
                <property name="pickup_location">
                    <summary>Identifier that the customer selected as a collection point</summary>
                    <type>string</type>
                    <required>false</required>
                </property>
                <property name="total_source_allocations">
                    <summary>Number of total successful source allocations</summary>
                    <description>Number of total successful source allocations. Each time a line is resourced this number will increase</description>
                    <type>integer</type>
                    <required>false</required>
                </property>
            </properties>
        </struct>

        <struct name="order_line_payment">
            <summary>Payment information of the line</summary>
            <extensible>true</extensible>
            <properties>
                <property name="payment_reference">
                    <summary>Identifier of the payment for the line payment</summary>
                    <type>string</type>
                    <required>true</required>
                </property>
                <property name="net_amount">
                    <summary>Net amount of the line payment</summary>
                    <type>float</type>
                    <required>true</required>
                </property>
                <property name="gross_amount">
                    <summary>Gross amount of the line payment</summary>
                    <type>float</type>
                    <required>true</required>
                </property>
                <property name="tax_amount">
                    <summary>Total tax amount of the line payment</summary>
                    <type>float</type>
                    <required>true</required>
                </property>
                <property name="tax_rate">
                    <summary>Total tax rate</summary>
                    <type>float</type>
                    <required>false</required>
                </property>
                <property name="taxes">
                    <summary>Detailed list of taxes applied to the line payment</summary>
                    <type>array[magento.sales.order_line_payment_tax]</type>
                    <required>true</required>
                </property>
                <property name="currency">
                    <summary>Currency of the line payment</summary>
                    <type>string</type>
                    <required>true</required>
                </property>
                <property name="status">
                    <summary>The status of the line payment</summary>
                    <type>string</type>
                    <required>false</required>
                </property>
                <property name="status_date">
                    <summary>The date of the line payment status change</summary>
                    <type>datetime</type>
                    <required>false</required>
                </property>

            </properties>
        </struct>

        <struct name="order_line_payment_tax">
            <summary>Taxes on the payment</summary>
            <extensible>true</extensible>
            <properties>
                <property name="type">
                    <summary>Type of the tax</summary>
                    <type>string</type>
                    <required>true</required>
                </property>
                <property name="amount">
                    <summary>Amount of tax</summary>
                    <type>float</type>
                    <required>true</required>
                </property>
                <property name="rate">
                    <summary>Tax rate applied</summary>
                    <type>float</type>
                    <required>true</required>
                </property>
            </properties>
        </struct>

        <struct name="order_line_promotion_information">
            <summary>Information about the promotion at order line level</summary>
            <extensible>true</extensible>
            <properties>
                <property name="original_price">
                    <summary>Original price of the line</summary>
                    <type>float</type>
                    <required>true</required>
                </property>
                <property name="promotions">
                    <summary>Promotions applied to the line</summary>
                    <type>array[magento.sales.order_line_promotion]</type>
                    <required>true</required>
                </property>
            </properties>
        </struct>

        <struct name="order_line_promotion">
            <summary>Promotion applied to the order</summary>
            <extensible>true</extensible>
            <properties>
                <property name="code">
                    <summary>Code of the promotion</summary>
                    <type>string</type>
                    <required>true</required>
                </property>
                <property name="name">
                    <summary>Name of the promotion</summary>
                    <type>string</type>
                    <required>true</required>
                </property>
                <property name="discount">
                    <summary>Quantity of the promotion discount</summary>
                    <type>float</type>
                    <required>true</required>
                </property>
                <property name="percentage">
                    <summary>Percentage of the promotion discount</summary>
                    <type>float</type>
                    <required>true</required>
                </property>
            </properties>
        </struct>

        <struct name="order_notification">
            <summary>Order Notification</summary>
            <extensible>false</extensible>
            <properties>
                <property name="id">
                    <summary>Notification Unique Identifier</summary>
                    <type>string</type>
                    <required>true</required>
                </property>
                <property name="order_id">
                    <summary>Order Unique Identifier</summary>
                    <type>string</type>
                    <required>true</required>
                </property>
                <property name="type">
                    <summary>Notification Type</summary>
                    <type>string</type>
                    <required>true</required>
                </property>
                <property name="recipient">
                    <summary>Recipient</summary>
                    <type>string</type>
                    <required>true</required>
                </property>
                <property name="sent_on">
                    <summary>Date and time when notification was sent</summary>
                    <type>datetime</type>
                    <required>true</required>
                </property>
                <property name="triggered_by">
                    <summary>Username or Process which triggered notification</summary>
                    <type>string</type>
                    <required>true</required>
                </property>
            </properties>
        </struct>
    </module>
</specification>
