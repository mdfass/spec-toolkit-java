<?xml version="1.0" encoding="UTF-8"?>
<specification xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xmlns="https://magento.com/open-specification"
               xsi:schemaLocation="https://magento.com/open-specification ../specification.xsd">

    <module name="magento.sales">
        <service name="order_reporting">
            <summary>Order Reporting</summary>

            <command name="report_orders_by_date">
                <summary>Report all orders modified between the start date and end date</summary>
                <extensible>false</extensible>
                <status>draft</status>
                <arguments>
                    <argument name="start_date">
                        <summary>Start date and time</summary>
                        <type>datetime</type>
                        <required>true</required>
                    </argument>
                    <argument name="end_date">
                        <summary>End date and time</summary>
                        <type>datetime</type>
                        <required>true</required>
                    </argument>
                    <argument name="current_status">
                        <summary>Define if OMS should report current status of the order</summary>
                        <type>boolean</type>
                        <required>false</required>
                    </argument>
                </arguments>
            </command>

        </service>
    </module>

</specification>
