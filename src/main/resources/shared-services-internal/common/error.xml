<?xml version="1.0" encoding="UTF-8"?>
<specification xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xmlns="https://magento.com/open-specification"
               xsi:schemaLocation="https://magento.com/open-specification ../specification.xsd">

    <module name="magento.common">
        <service name="error_management">
            <summary>Error notification reporting</summary>

            <command name="notify">
                <summary>Notify about any error that occurred during processing</summary>
                <extensible>false</extensible>
                <status>public</status>
                <arguments>
                    <argument name="topic">
                        <summary>Original topic processing where error occurred</summary>
                        <type>string</type>
                        <required>true</required>
                    </argument>
                    <argument name="message">
                        <summary>Error message</summary>
                        <type>string</type>
                        <required>true</required>
                    </argument>
                    <argument name="delivery_id">
                        <summary>Original delivery ID of message causing a given error to be notified</summary>
                        <type>string</type>
                        <required>false</required>
                    </argument>
                    <argument name="payload">
                        <summary>Payload of message that triggered the error</summary>
                        <type>string</type>
                        <required>true</required>
                    </argument>
                </arguments>
            </command>

            <event name="created">
                <summary>Notification about any error that occurred during processing</summary>
                <extensible>false</extensible>
                <status>public</status>
                <arguments>
                    <argument name="topic">
                        <summary>Original topic processing where error occurred</summary>
                        <type>string</type>
                        <required>true</required>
                    </argument>
                    <argument name="message">
                        <summary>Error message</summary>
                        <type>string</type>
                        <required>true</required>
                    </argument>
                    <argument name="delivery_id">
                        <summary>Original delivery ID of message causing a given error to be notified</summary>
                        <type>string</type>
                        <required>false</required>
                    </argument>
                    <argument name="payload">
                        <summary>Payload of message that triggered the error</summary>
                        <type>string</type>
                        <required>true</required>
                    </argument>
                </arguments>
            </event>
        </service>
    </module>
</specification>
