<?xml version="1.0" encoding="UTF-8"?>
<specification xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xmlns="https://magento.com/open-specification"
               xsi:schemaLocation="https://magento.com/open-specification ../specification.xsd">

    <module name="magento.common">
        <struct name="custom_attribute">
            <summary>Custom Attribute</summary>
            <extensible>false</extensible>
            <properties>
                <property name="name">
                    <summary>Name of the attribute</summary>
                    <type>string</type>
                    <required>true</required>
                </property>
                <property name="value">
                    <summary>Value of the attribute</summary>
                    <type>string</type>
                    <required>true</required>
                </property>
            </properties>
        </struct>
    </module>

</specification>
