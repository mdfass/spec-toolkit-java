<?xml version="1.0" encoding="UTF-8"?>

<specification xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xmlns="https://magento.com/open-specification"
               xsi:schemaLocation="https://magento.com/open-specification ../specification.xsd">

    <module name="magento.catalog">

        <service name="product_management">
            <summary>Product Management</summary>

            <event name="updated">
                <summary>Product Updated</summary>
                <description>Triggered once product updated from the source of truth (PIM or Magento Commerce). Will create new products in OMS catalog.
                    The supported type of products are BUNDLE, VIRTUAL, PHYSICAL, SERVICE and SHIPPING.
                </description>
                <extensible>true</extensible>
                <status>public</status>
                <arguments>
                    <argument name="product">
                        <summary>Product</summary>
                        <type>magento.catalog.product</type>
                        <required>true</required>
                    </argument>
                </arguments>
            </event>
        </service>

    </module>
</specification>
