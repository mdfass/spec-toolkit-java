<?xml version="1.0" encoding="UTF-8"?>

<specification xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xmlns="https://magento.com/open-specification"
               xsi:schemaLocation="https://magento.com/open-specification ../specification.xsd">

    <module name="magento.catalog">

        <struct name="product">
            <summary>Product</summary>
            <description>
                Product represents the simplest physical or virtual item which can be bought by the customer.
                Product data normally includes a few static fields and a batch of dynamically managed attributes to
                store system information (e.g. is_searchable, ean, country_of_origin etc) and information shown
                to the customer (e.g. long_description, color, or ssd_storage_size etc).
            </description>
            <extensible>true</extensible>
            <properties>
                <property name="id">
                    <summary>Unique Identifier</summary>
                    <type>string</type>
                    <required>true</required>
                </property>

                <property name="type">
                    <summary>Type of product (Simple, Configurable, Virtual...)</summary>
                    <type>magento.catalog.product_type</type>
                    <required>true</required>
                </property>

                <property name="sku">
                    <summary>Stock Keeping Unit of the product</summary>
                    <type>string</type>
                    <required>true</required>
                </property>

                <property name="price_adjustable">
                    <summary>Sets the price as adjustable</summary>
                    <type>boolean</type>
                    <required>false</required>
                </property>

                <property name="name">
                    <summary>Name of the product</summary>
                    <description>
                        Name of the product meant to identify the product in a more human friendly way

                        Example:

                        ```
                        "name": [
                            {"locale": "en_US", "channel": "mobile", "value": "T-Shirt"},
                            {"locale": "es_ES", "channel": "mobile", "value": "Camiseta"}
                        ]
                        ```
                    </description>
                    <type>array[magento.catalog.localized_name]</type>
                    <required>false</required>
                </property>

                <property name="price">
                    <summary>Price of the product</summary>
                    <description>
                        Standard prices of the product.
                    </description>
                    <type>magento.catalog.product_price</type>
                    <required>false</required>
                </property>

                <property name="status">
                    <summary>Status of the product (ACTIVE, INACTIVE, EOL, OUTLET)</summary>
                    <description>
                        The status is only used for the purpose of defining the safety stock at the aggregate level. Each status can have a different safety threshold. Important: the statuses needs to be provided in uppercase.
                    </description>
                    <type>string</type>
                    <required>true</required>
                </property>

                <property name="created_at">
                    <summary>Date of creation of the product</summary>
                    <type>datetime</type>
                    <required>false</required>
                </property>

                <property name="modified_at">
                    <summary>Date of the last modification of the product</summary>
                    <type>datetime</type>
                    <required>false</required>
                </property>

                <property name="children_skus">
                    <summary>If this is a configurable product a list of children (products) skus</summary>
                    <description>
                        An array of products skus corresponding to this product configurations (children)
                    </description>
                    <type>array[string]</type>
                    <required>false</required>
                </property>

                <property name="custom_attributes">
                    <summary>Custom Attributes</summary>
                    <type>array[magento.common.custom_attribute]</type>
                    <required>false</required>
                </property>

            </properties>
        </struct>

        <struct name="product_price">
            <summary>Price of a product including amount and currency</summary>
            <description>Price of a product including amount and currency</description>
            <extensible>false</extensible>
            <properties>
                <property name="currency">
                    <summary>Currency</summary>
                    <type>string</type>
                    <required>true</required>
                </property>

                <property name="amount">
                    <summary>Price amount</summary>
                    <type>float</type>
                    <required>true</required>
                </property>
            </properties>
        </struct>

        <struct name="localized_name">
            <summary>Localized name</summary>
            <description>Name for particular channel and locale</description>
            <extensible>false</extensible>
            <properties>
                <property name="value">
                    <summary>Name</summary>
                    <type>string</type>
                    <required>true</required>
                </property>
                <property name="channel">
                    <summary>Channel</summary>
                    <type>string</type>
                    <required>false</required>
                </property>
                <property name="locale">
                    <summary>Locale</summary>
                    <type>string</type>
                    <required>false</required>
                </property>
            </properties>
        </struct>

        <enum name="product_type">
            <value>bundle</value>
            <value>configurable</value>
            <value>downloadable</value>
            <value>grouped</value>
            <value>simple</value>
            <value>virtual</value>
            <value>service</value>
            <value>shipping</value>
        </enum>

    </module>
</specification>
