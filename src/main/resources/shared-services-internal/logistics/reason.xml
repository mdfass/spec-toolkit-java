<?xml version="1.0" encoding="UTF-8"?>
<specification xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xmlns="https://magento.com/open-specification"
               xsi:schemaLocation="https://magento.com/open-specification ../specification.xsd">

    <module name="magento.logistics">

        <service name="reason_repository">
            <summary>Reason Repository</summary>
            <query name="search">
                <summary>Searchs reasons by criteria</summary>
                <extensible>false</extensible>
                <status>public</status>
                <arguments>
                    <argument name="type">
                        <summary>Reason type to search</summary>
                        <type>magento.logistics.reason_type</type>
                        <required>false</required>
                    </argument>
                </arguments>
                <returns>array[magento.logistics.reason]</returns>
            </query>
            <query name="get_reasons">
                <summary>Searchs reasons by criteria</summary>
                <extensible>false</extensible>
                <status>public</status>
                <arguments>
                    <argument name="type">
                        <summary>Reason type to search</summary>
                        <type>magento.logistics.reason_type</type>
                        <required>false</required>
                    </argument>
                </arguments>
                <returns>array[magento.logistics.reason]</returns>
            </query>
        </service>

        <enum name="reason_type">
            <value>pick-decline</value>
            <value>customer-decline</value>
        </enum>

        <struct name="reason">
            <summary>Reason</summary>
            <extensible>false</extensible>
            <properties>
                <property name="type">
                    <summary>Reason type (pick-decline, customer-decline)</summary>
                    <type>magento.logistics.reason_type</type>
                    <required>true</required>
                </property>
                <property name="description">
                    <summary>Description of the reason</summary>
                    <type>string</type>
                    <required>true</required>
                </property>
            </properties>
        </struct>

    </module>
</specification>
